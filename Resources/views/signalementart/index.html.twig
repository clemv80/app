    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Creationdt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for signalementArt in signalementArts %}
            <tr>
                <td><a href="{{ path('signalementart_show', { 'id': signalementArt.id }) }}">{{ signalementArt.id }}</a></td>
