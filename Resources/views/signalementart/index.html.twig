                <td>
                    <ul>
                        <li>
                            <a href="{{ path('signalementart_show', { 'id': signalementArt.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('signalementart_edit', { 'id': signalementArt.id }) }}">edit</a>
